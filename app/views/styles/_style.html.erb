<div id="<%= dom_id style %>">
  <p>
    <strong>Name:</strong>
    <%= style.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= style.description %>
  </p>

  <p>
    <strong>Beers:</strong>
    <% style.beers.each do |beer| %>
      <%= link_to "#{beer.name}", beer %>
    <% end %>
  </p>

</div>
